{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "include": [
    "src/**/*.ts"
  ],

  "exclude": [
    "src/tests/*"
  ],

  "compilerOptions": {
    "outDir": "lib",
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "es2020",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true
  }
}
